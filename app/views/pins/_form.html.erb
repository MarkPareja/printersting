  <div class="form-group">
    <h4>
      <div class="label label-info">
        <%= f.label :image %>
      </div>
    </h4>
    <%= f.file_field :image, class: "form-control" %>
  </div>
  <div class="actions">
    <br>
    <%= f.submit class: "btn btn-primary" %>
  </div>
 </div>
